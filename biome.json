{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "formatter": {
    "enabled": false
  },
  "linter": {
    "rules": {
      "correctness": {
        "noUnknownProperty": "off",
        "noUnusedImports": "error",
        "noUnusedVariables": "error"
      },
      "style": {
        "useFragmentSyntax": "error",
        "useImportType": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "all"
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
